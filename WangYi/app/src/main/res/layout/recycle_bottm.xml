<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip">

        <ProgressBar
            style="?android:progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="加载中" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_relativ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_bottom"
            android:layout_width="80dp"
            android:layout_height="65dp"
            android:layout_alignBottom="@+id/content_bottom"
            android:layout_alignTop="@+id/title_bottom"
            android:paddingRight="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/title_bottom"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/iv_bottom"
            android:text="title"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content_bottom"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/title_bottom"
            android:layout_toRightOf="@id/iv_bottom"
            android:text="content" />

    </RelativeLayout>

</LinearLayout>